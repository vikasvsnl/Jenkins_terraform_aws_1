pipeline {
    agent any
    
    tools {
    terraform 'jenkins-terraform'

    stages {
        stage('checkout from GIT') {
            steps {
                git branch: 'main', credentialsId: '' , url: 'https://github.com/vikasvsnl/Jenkins_terraform_aws_1' 
            }
        }
        stage('terraform init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('terraform fmt') {
            steps {
                sh 'terraform fmt'
            }
        stage('terraform vaidate') {
            steps {
                sh 'terraform validate'
            }
         stage('terraform plan') {
            steps {
                sh 'terraform plan'
            }
         stage('terraform apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
    }
}
